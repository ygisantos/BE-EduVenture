{
    "build": {
      "builder": "NIXPACKS",
      "nixpacksPlan": {
        "phases": {
          "install": {
            "cmds": [
              "composer install --no-dev --optimize-autoloader"
            ]
          },
          "build": {
            "cmds": [
              "php artisan config:cache",
              "php artisan route:cache"
            ]
          }
        }
      }
    },
    "start": "php artisan serve --host=0.0.0.0 --port=${PORT:-8080}"
  }
